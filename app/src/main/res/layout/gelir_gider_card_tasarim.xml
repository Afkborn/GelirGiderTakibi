<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <ImageView
            android:id="@+id/imageView_harcamaTipiIco"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/shopping_cart" />

        <TextView
            android:id="@+id/textView_harcamaTipiAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/imageView_harcamaTipiIco"
            app:layout_constraintStart_toStartOf="@+id/imageView_harcamaTipiIco"
            app:layout_constraintTop_toBottomOf="@+id/imageView_harcamaTipiIco"
            tools:text="Alışveriş" />

        <ProgressBar
            android:id="@+id/progressBar_harcamaYuzde"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:progress="50"
            app:layout_constraintEnd_toStartOf="@+id/textView_harcamaYuzde"
            app:layout_constraintStart_toEndOf="@+id/textView_harcamaTipiAdi"
            app:layout_constraintTop_toTopOf="@+id/imageView_harcamaTipiIco" />

        <TextView
            android:id="@+id/textView_harcamaYuzde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView_harcamaTipiIco"
            tools:text="%50.05" />

        <TextView
            android:id="@+id/textView_harcamaAdi"
            android:layout_width="270dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Market harcaması" />

        <TextView
            android:id="@+id/textView_harcamaTarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="08/12/2022" />

        <TextView
            android:id="@+id/textView_harcamaMiktar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView_harcamaAdi"
            app:layout_constraintStart_toStartOf="@+id/textView_harcamaAdi"
            app:layout_constraintTop_toBottomOf="@+id/textView_harcamaAdi"
            tools:text="15,85 ₺" />

        <ImageView
            android:id="@+id/imageView_gelirGiderIco"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_harcamaTipiIco"
            app:layout_constraintStart_toStartOf="@+id/imageView_harcamaTipiIco"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/down_arrow" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>